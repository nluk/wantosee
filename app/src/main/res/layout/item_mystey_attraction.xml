<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="350dp"
                                                   android:layout_marginTop="8dp"
                                                   android:layout_marginBottom="8dp"
>


    <com.airbnb.lottie.LottieAnimationView
            android:visibility="gone"
            android:id="@+id/likeAnim"
            android:layout_width="100dp"
            android:layout_height="100dp"

            app:lottie_rawRes="@raw/lottie_like"

            app:lottie_loop="false"

            app:lottie_autoPlay="false" app:layout_constraintBottom_toBottomOf="@+id/cardView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="@+id/cardView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/cardView" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="5dp"
    />


    <androidx.cardview.widget.CardView
            android:backgroundTint="@color/primaryVeryDarkColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cardView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="match_parent"
        >
            <ImageView android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:id="@+id/attractionImage"
            />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>